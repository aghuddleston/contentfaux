{
  "name": "contentfaux",
  "version": "0.0.0",
  "description": "A way to stub requests to Contentful.",
  "main": "index.js",
  "bin": "./index.js",
  "scripts": {
    "runtest": "npm run build && node ./ setup",
    "predoc": "rimraf docs",
    "doc": "esdoc -c scripts/doc.json",
    "lint": "standard && eslint ./src/**",
    "validate-commit": "validate-commit-msg",
    "pretest": "npm run build",
    "test": "nyc _mocha --compilers js:babel-register",
    "posttest": "nyc report --reporter=lcov",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist src",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "travis": "npm t && npm run coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remedyhealth/contentfaux.git"
  },
  "keywords": [
    "contentful",
    "test",
    "unit",
    "integration",
    "qa",
    "testing",
    "stub",
    "mock"
  ],
  "author": "Remedy Health Media <support@remedyhealthmedia.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/remedyhealth/contentfaux/issues"
  },
  "homepage": "https://github.com/remedyhealth/contentfaux#readme",
  "dependencies": {
    "app-root-path": "^2.0.1",
    "colors": "^1.1.2",
    "dotenv": "^2.0.0",
    "mitm": "^1.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "esdoc": "^0.4.8",
    "eslint": "^3.8.1",
    "ghooks": "^1.3.2",
    "mocha": "^3.1.0",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^8.3.0",
    "rimraf": "^2.5.2",
    "semantic-release": "^4.3.5",
    "standard": "^8.5.0",
    "validate-commit-msg": "^2.8.2"
  },
  "files": [
    "dist",
    "browser.js",
    "LICENSE",
    "README.md"
  ],
  "standard": {
    "parser": "babel-eslint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "npm run validate-commit",
      "pre-push": "npm t",
      "post-merge": "npm install && npm prune",
      "post-rewrite": "npm install && npm prune"
    },
    "contentfaux": {
      "apikey": "1157ce98f62ebccc473a3fe59397c84fc685e5f1b7630ad56da07ccba3be50ca",
      "spaceid": "cyn2ssr0iqx0"
    }
  },
  "browser": "./browser.js",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-assign"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "dist/**/*.js"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": false,
            "ClassDeclaration": false
          }
        }
      ],
      "valid-jsdoc": [
        "error",
        {
          "prefer": {
            "return": "returns",
            "arg": "param",
            "argument": "param"
          },
          "preferType": {
            "object": "Object",
            "string": "String",
            "number": "Number",
            "int": "Number",
            "boolean": "Boolean",
            "bool": "Boolean",
            "array": "Array",
            "JSON": "Object",
            "Function": "function"
          },
          "requireReturn": false,
          "requireParamDescription": true,
          "requireReturnDescription": false
        }
      ]
    }
  }
}
